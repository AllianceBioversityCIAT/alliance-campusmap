# PostgreSQL connection using a full DATABASE_URL string
# DATABASE_URL=postgres://postgres:postgres@localhost:5432/campusmap

# Or configure connection fields individually
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=campusmap

# Optional tuning flags
# Set to true to let TypeORM sync the schema automatically (development only)
DB_SYNCHRONIZE=true
# Enable SQL logging
DB_LOGGING=false
# Enable SSL (set to true for managed DBs that require TLS)
DB_SSL=false
# Require trusted certificates when SSL is enabled
DB_SSL_REJECT_UNAUTHORIZED=false
